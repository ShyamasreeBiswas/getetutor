<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.littlelearner"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/littlelearner"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.littlelearner.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainMenuActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".AlphaNumActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".DrawShapeActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ShowNumbersActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".DrawCanvasActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
